{
	"name": "simple-server",
	"description": "Simple server using Bun",
	"private": true,
	"type": "module",
	"main": "src/index.ts",
	"module": "src/index.ts",
	"scripts": {
		"dev": "bun run --watch src/index.ts",
		"dev:all": "./build.sh --watch",
		"start": "bun run src/index.ts",
		"build": "bun build src/client/*.tsx --outdir dist/client --target browser",
		"build:client": "bun build src/client/*.tsx --outdir dist/client --target browser",
		"build:all": "bun run build:client"
	},
	"dependencies": {
		"browser-image-compression": "^2.0.2",
		"buffer": "^6.0.3",
		"bun-plugin-tailwind": "^0.0.15",
		"daisyui": "^5.0.9",
		"heic-to": "^1.1.10",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"sharp": "^0.33.2",
		"tailwindcss": "^4.0.9",
		"webp-converter-browser": "^1.0.4"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/react": "^18.2.53",
		"@types/react-dom": "^18.2.18",
		"bun-types": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
