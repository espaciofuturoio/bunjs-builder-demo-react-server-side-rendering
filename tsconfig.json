{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"types": ["bun-types"],
		"allowJs": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"jsx": "preserve"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "public"]
}
